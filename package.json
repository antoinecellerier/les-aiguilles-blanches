{
  "name": "snow-groomer",
  "version": "1.0.0",
  "description": "Snow groomer simulation game set in a fictional Savoie ski resort",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist electron-dist electron/dist node_modules/.vite"
  },
  "keywords": [
    "game",
    "simulation",
    "phaser",
    "ski"
  ],
  "author": "Antoine",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.2.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.10.1",
    "phaser": "^3.90.0",
    "phaser3-rex-plugins": "^1.80.18"
  }
}
