{
  "name": "les-aiguilles-blanches",
  "version": "1.0.0",
  "description": "Les Aiguilles Blanches â€” Snow groomer simulation (desktop build)",
  "main": "main.cjs",
  "scripts": {
    "start": "electron .",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --linux --win"
  },
  "build": {
    "appId": "com.lesaiguillesblanches.game",
    "productName": "Les Aiguilles Blanches",
    "files": [
      "main.cjs",
      "preload.cjs",
      "icon.png",
      "icons/**/*.png"
    ],
    "extraResources": [
      {
        "from": "../dist",
        "to": "dist",
        "filter": ["**/*", "!**/*.map"]
      }
    ],
    "directories": {
      "output": "../electron-dist"
    },
    "afterPack": "./afterPack.cjs",
    "electronLanguages": ["cs", "de", "en-US", "en-GB", "es", "fi", "fr", "it", "ja", "ko", "nb", "pl", "sk", "sv", "tr"],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Game",
      "icon": "build/icons"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "../assets/icon.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.games"
    }
  },
  "devDependencies": {
    "canvas": "^3.2.1",
    "electron": "^35.0.0",
    "electron-builder": "^26.0.0"
  }
}
