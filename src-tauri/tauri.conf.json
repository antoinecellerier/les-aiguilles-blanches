{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Les Aiguilles Blanches",
  "version": "1.0.0",
  "identifier": "com.lesaiguillesblanches.game",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "windows": [
      {
        "title": "Les Aiguilles Blanches",
        "width": 1280,
        "height": 720,
        "minWidth": 800,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Game",
    "shortDescription": "Snow groomer simulation",
    "longDescription": "Groom ski pistes under starlit Alpine skies in this retro pixel-art snow groomer simulation.",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
